<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item  android:id="@android:id/background" >

        <shape>

            <corners

                android:radius="15dp" />

            <gradient

                android:startColor="#eaf5fb"

                android:endColor="#eaf5fb" />

        </shape>

    </item>

    <!--  设置进度条颜色  -->
    <item  android:id="@android:id/progress" >
        <clip>
            <shape>
                <corners
                    android:radius="15dp" />
                <gradient
                    android:startColor="#3099d3"
                    android:endColor="#3099d3" />
            </shape>
        </clip>
    </item>
</layer-list>