<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--  设置背景色（黑色）  -->

    <item  android:id="@android:id/background" >

        <shape>

            <corners

                android:radius="15dp" />

            <gradient

                android:startColor="#eaf5fb"

                android:endColor="#eaf5fb" />

        </shape>

    </item>

    <!--  设置进度条颜色（白色）  -->
    <item  android:id="@android:id/progress" >
        <clip>
            <shape>
                <corners
                    android:radius="15dp" />
                <gradient
                    android:startColor="#dc3030"
                    android:endColor="#dc3030" />
            </shape>
        </clip>
    </item>
</layer-list>